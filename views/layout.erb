<!DOCTYPE html>
<html>
<head>
  <title>Fantastic Peeps And Where to Find Them</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <script src="/js/main.js"></script>
</head>

<body>

  <header>

    <h1 id="h1-1"> Fantastic Peeps </h1> 
    <h1 id="h1-2"> And Where to Find Them </h1>

    <div id="menu-bar">

      <a href="/"> Home </a>

      <% if session[:user_id] %>

        <a href="/users"> Fantastic Peeps </a>

        <form method="post" action="/sessions">
          <input type="hidden" name="_method" value="delete">
          <input id="logout-btn" type="submit" value="Logout">
        </form>

      <% else %>

        <div id="login-menu">
          <a id="main-login-btn" href="#">Login!</a>
          <a id="main-reg-btn" href="#">Sign Up!</a>
        </div>

      <% end %>

    </div>

    <% if @password_message %>
     
      <h3> <%= @password_message %> </h3>

    <% elsif @username_message %>
     
      <h3> <%= @username_message %> </h3>

    <% elsif @incorrect_info %>

      <h3> <%= @incorrect_info %> </h3>

    <% end %>

  </header>

  <%= yield %>

</body>
</html>

<!-- REGISTER FORM MODAL -->
<div id="register" class="modal-container">
  <div class="modal-content">
    
    <a id="reg-close-btn" class= "close-btn" href=""> Close </a>
    
    <p>Register to be part of the conversation.</p>
    <p>After you register you will have to log in with your new username and password. </p>

    <form method="post" action="/users">
     
      <label for="name">Name:</label>
      <input type="text" placeholder="Name" name="name">

      <br>

      <label for="username">Create a username:</label>
      <input type="text" placeholder="Username" name="username">

      <br>

      <label for="password">Password:</label>
      <input type="password" placeholder="password123" name="password">

      <br>

      <label for="password_confirmation">Confirm Password:</label>
      <input type="password" placeholder="password123" name="password_confirmation">
      
      <br>
      
      <button>Register!</button>

    </form>
 
  </div> 
</div>


<!-- LOG IN FORM MODAL -->
<div id="login" class="modal-container">
  <div class="modal-content">
    
    <a id="login-close-btn" class="close-btn" href=""> Close </a>
    
    <form method="post" action="/sessions">

      <label for="username">Username:</label>
      <input type="text" placeholder="Username" name="username">

      <br>

      <label for="password">Password:</label>
      <input type="password" placeholder="password123" name="password">

      <button>Log in!</button>

    </form>
  
  </div>
</div>
