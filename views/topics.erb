
<% @topics.each do |topic| %>

  <h2>
    <a href="topics/<%=topic.id%>">
    <%= topic.title %> </a>
  </h2>

  <p> By: 
    <a href="users/<%= topic.user_id%>">
    <%= topic.user.username %> </a>
  </p>

  <form method="POST" action="/topics/<%=topic.id%>/votes">
    <button>Vote up!</button>
  </form>

  <p> Created: <%= topic.pretty_time%> </p>

<% end %>

